import java.util.Scanner;

public class countdigit {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int num=sc.nextInt();
		int count=0;
		int sum=0;
		
		while(num>0) {				
			int num1=num%10;
			sum+=num1;
	        count++;
		    num=num/10;
		}
		System.out.println(count);
		System.out.println(sum);

	}

}
