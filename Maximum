import java.io.*;
import java.util.*;
import java.util.Scanner;

public class Maximum {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int x1=sc.nextInt();
        int x2=sc.nextInt();
        int y1=sc.nextInt();
        int y2=sc.nextInt();
        Float m=(x1+y1)/2.0f;
        Float n=(x2+y2)/2.0f;
        System.out.println("Max's house is located at ("+m+", "+n+")");
        
        
    }
}
